{% extends 'base-admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <h1>Utilisateurs</h1>

    <a href="{{ path('app_admin_user_new') }}" class="btn btn-success mt-2">Nouveau</a>

    <table class="table">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prenom</th>
                {# <th>Adresse</th> #}
                {# <th>Code Postal</th> #}
                {# <th>Photo de profil</th> #}
                {# <th>IsVerified</th> #}
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td> #}
                <td>{{ user.pseudo }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                {# <td>{{ user.adresse }}</td> #}
                {# <td>{{ user.codePostal }}</td> #}
                {# <td>{{ user.imageName }}</td> #}
                {# <td>{{ user.isVerified ? 'Yes' : 'No' }}</td> #}
                <td class="d-flex flex-row align-items-center">
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}"class="me-2"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="ms-2 me-4"><i class="fa-solid fa-pen"></i></a>
                    {{ include('admin_user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Pas d'utilisateurs</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
