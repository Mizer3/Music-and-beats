{% extends 'base-admin.html.twig' %}

{% block title %}Info utilisateur{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_user_index') }}"><i class="fa-solid fa-backward mb-3 mt-2"></i></a>
    
    <h1>Info de {{user.nom}} {{user.prenom}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.codePostal }}</td>
            </tr>
            <tr>
                <th>Image de profil</th>
                <td><img src="{{asset('../uploads/images/' ~ user.imageName)}}" alt="{{user.pseudo}}" class="img-audio"></td>
            </tr>
            <tr>
                <th>Compte valid√©</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Utilisateur mis en avant</th>
                <td>{{ user.isVIP ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen"></i></a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}